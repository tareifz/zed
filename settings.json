// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
	"disable_ai": true,
	"auto_install_extensions": {
		"zig": true,
		"odin": true,
		"java": true,
		"crystal": true,
		"ruby": true,
		"html": true,
		"scss": true,
		"svelte": true,
		"toml": true,
		"make": true,
		"flexoki-themes": true,
		"darker-horizon": true,
		"vscode-icons": true,
		"monospace-icon-theme": true,
		"modern-icons": true,
		"emmet": true,
		"git-firefly": true
	},
	"show_edit_predictions": false,
	"file_types": {
		"C": ["c", "h"],
		"C++": ["cpp", "hpp"]
	},
	"languages": {
		"Odin": {
			"show_edit_predictions": false
		},
		"Rust": {
			"show_edit_predictions": false
		},
		"C": {
			"tab_size": 4,
			"format_on_save": "on"
		},
		"C++": {
			"indent_guides": {
				"line_width": 2
			},
			"format_on_save": "on"
		},
		"Crystal": {
			"language_servers": ["!crystalline", "..."],
			"formatter": {
				"external": {
					"command": "crystal",
					"arguments": ["tool", "format", "-"]
				}
			}
		}
	},
	"toolbar": {
		// "breadcrumbs": false,
		"quick_actions": false
	},
	"tabs": {
		"file_icons": true
	},
	"ui_font_size": 16,
	"buffer_font_size": 16,
	"buffer_font_weight": 400,
	"buffer_font_family": "GitLab Mono",
	"buffer_line_height": "standard",
	"theme": {
		"mode": "system",
		"light": "Darker Horizon",
		"dark": "Darker Horizon"
	},
	"icon_theme": {
		"light": "Modern Icons (Light)",
		"dark": "Modern Icons (Dark)"
	},
	"hard_tabs": true,
	"tab_size": 4,
	"show_wrap_guides": true,
	"wrap_guides": [80]
}
